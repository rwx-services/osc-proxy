{
  "name": "osc-proxy-app",
  "version": "1.0.0",
  "description": "OSC Proxy for Lightkey - UDP to TCP forwarding with real-time metrics",
  "main": "main.js",
  "scripts": {
    "dev:css": "tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --watch",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --minify",
    "dev": "concurrently \"npm run dev:css\" \"electron .\"",
    "build": "npm run build:css && electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.oscproxy.app",
    "productName": "OSC Proxy",
    "directories": {
      "output": "dist-build"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "dist/**/*",
      "!src/styles/input.css"
    ],
    "extraResources": [
      {
        "from": "../bin",
        "to": "ruby-proxy/bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../lib",
        "to": "ruby-proxy/lib",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../config",
        "to": "ruby-proxy/config",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../vendor",
        "to": "ruby-proxy/vendor",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "title": "OSC Proxy",
      "icon": "assets/icon.icns"
    }
  },
  "keywords": [
    "osc",
    "lightkey",
    "dmx",
    "lighting",
    "proxy"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^38.4.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "js-yaml": "^4.1.0"
  }
}
